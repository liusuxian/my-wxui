.my-button {
  width: 100%;
  position: relative;
  padding-left: 0;
  padding-right: 0;
  border: 1px solid;
  overflow: hidden;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  user-select: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.my-button::after {
  border: 0;
}

.my-button__active::after {
  content: " ";
  background-color: rgba(0, 0, 0, 0.1);
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  transform: none;
  z-index: 1;
  border-radius: 0;
}

.my-button__opacity {
  opacity: 0.5;
}

.my-btn__link {
  border-color: transparent;
  background: transparent;
}
