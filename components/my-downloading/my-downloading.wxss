.my-downloading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  z-index: 998;
}

.downloading-icon {
  padding: 48rpx 62rpx 0 62rpx;
  width: 72rpx;
  height: 72rpx;
}

.downloading-title {
  padding: 48rpx 62rpx 0 62rpx;
  font-weight: 400;
  line-height: 42px;
  text-align: center;
}

.downloading-content {
  padding: 0 18rpx 22rpx 18rpx;
  font-weight: 400;
  line-height: 24px;
  text-align: center;
}
