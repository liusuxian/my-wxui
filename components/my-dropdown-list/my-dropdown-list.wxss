@font-face {
  font-family: "myDropdownList";
  src: url("data:font/ttf;charset=utf-8;base64,")
    format("truetype");
  font-weight: normal;
}

.my-dropdown-list-icon {
  font-family: "myDropdownList" !important;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.my-dropdown-list-icon__arrowdown:before {
  content: "\e61e";
}

.my-dropdown-list {
  position: relative;
}

.my-dropdown-view {
  width: 100%;
  position: absolute;
  z-index: -99;
  left: 0;
  opacity: 0;
  transition: all 0.2s ease-in-out;
  background-color: transparent;
}

.my-dropdown-view__show {
  opacity: 1;
  z-index: 996;
}

.my-dropdown {
  display: flex;
  justify-content: space-between;
  border: 1px solid #ccc;
  padding: 20rpx 29rpx;
  font-weight: 400;
  line-height: 48rpx;
}

.my-dropdown-animation {
  display: inline-block;
  transform: rotate(0deg);
  transition: all 0.2s;
}

.my-dropdown-animation__show {
  transform: rotate(180deg);
}

.my-selected-list {
  border: 1px solid #ccc;
  overflow: hidden;
  transform: translateZ(0);
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.my-selected-scroll {
  width: calc(100% + 20rpx);
}

.my-selected-scroll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.my-selected-cell {
  position: relative;
  width: 100%;
  box-sizing: border-box;
}

.my-selected-cell__hover:active {
  background-color: rgba(0, 0, 0, 0.1) !important;
}

.my-selected-cell-text {
  display: flex;
  align-items: center;
  font-weight: 400;
  line-height: 48rpx;
  padding: 20rpx 29rpx !important;
}

.my-selected-cell__line {
  position: absolute;
  border-bottom: 1px solid #ccc;
  -webkit-transform: scaleY(0.5) translateZ(0);
  transform: scaleY(0.5) translateZ(0);
  transform-origin: 0 100%;
  left: 30rpx;
  right: 50rpx;
  bottom: 0;
  pointer-events: none;
}
