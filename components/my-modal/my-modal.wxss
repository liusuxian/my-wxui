.my-modal__container {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease-in-out;
}

.my-modal__hidden {
  visibility: hidden;
}

.my-modal-box {
  position: relative;
  opacity: 0;
  box-sizing: border-box;
  transition: all 0.3s ease-in-out;
}

.my-modal__scale {
  transform: scale(0);
}

.my-modal__normal {
  transform: scale(1);
}

.my-modal__show {
  opacity: 1;
  visibility: visible;
}

.my-modal-title {
  text-align: center;
  font-size: 34rpx;
  color: #333;
  padding-top: 20rpx;
  font-weight: bold;
}

.my-modal-content {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding-top: 20rpx;
  padding-bottom: 60rpx;
}

.my-mtop {
  margin-top: 30rpx;
}

.my-mbtm {
  margin-bottom: 30rpx;
}

.my-modal-btn-box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.my-flex-column {
  flex-direction: column;
}

.my-modal-btn {
  width: 46%;
  height: 68rpx;
  line-height: 68rpx;
  position: relative;
  border-radius: 10rpx;
  font-size: 26rpx;
  overflow: visible;
  margin-left: 0;
  margin-right: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border-width: 0;
}

.my-modal-btn:active::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, 0.15);
  pointer-events: none;
}

.my-modal-btn::after {
  border-radius: 10rpx;
}

.my-modal__border {
  position: absolute;
  width: 200%;
  height: 200%;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  transform: scale(0.5, 0.5) translateZ(0);
  border: 1px solid;
  box-sizing: border-box;
  left: 0;
  top: 0;
  z-index: 2;
  border-radius: 20rpx;
  pointer-events: none;
}

.my-btn-width {
  width: 80% !important;
}

.my-circle-btn {
  border-radius: 40rpx !important;
}

.my-circle-btn::after {
  border-radius: 40rpx !important;
}

.my-circle-border {
  border-radius: 80rpx !important;
}
