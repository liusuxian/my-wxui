.my-textarea {
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  border-width: 0;
}

.my-textarea__flex-start {
  align-items: flex-start !important;
}

.my-textarea__left::after {
  left: 30rpx !important;
}

.my-textarea__border-top {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  transform-origin: 0 0;
  z-index: 2;
  pointer-events: none;
  box-sizing: border-box;
}

.my-textarea__border-bottom {
  position: absolute;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  transform-origin: 0 100%;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 2;
  pointer-events: none;
  box-sizing: border-box;
}

.my-textarea__border {
  position: absolute;
  height: 200%;
  width: 200%;
  border: 1px solid #d1d1d1;
  transform-origin: 0 0;
  transform: scale(0.5);
  left: 0;
  top: 0;
  pointer-events: none;
  box-sizing: border-box;
}

.my-textarea-required {
  height: 30rpx;
  position: absolute;
  left: 0;
  left: 12rpx;
  transform: translateY(-50%);
}

.my-textarea-required__flex-start {
  transform: translateY(0);
}

.my-textarea__label {
  padding-right: 12rpx;
  flex-shrink: 0;
}

.my-textarea__flex-1 {
  flex: 1;
}

.my-textarea__self {
  width: 100%;
  overflow: visible;
}

.my-textarea__text-right {
  text-align: right;
}

.my-textarea__placeholder {
  color: #ccc;
  overflow: visible;
}

.my-textarea__counter {
  padding-top: 8rpx;
  text-align: right;
}
